<h1>Genre: {{genre.name}}</h1>

  {{#if genre_books.length}}
<div style="margin-left:20px;margin-top:20px">
 <p><strong>Delete the following books before attempting to delete
      this genre.</strong></p>
  <h2 style="font-size: 1.5rem;">Genre Books</h2>
    <dl>
      {{#each genre_books}}
        <dt>
          <a href="{{this.url}}">{{this.title}}</a>
        </dt>
        <dd>{{this.summary}}</dd>
      {{/each}}
    </dl>
  {{else}}
    <p>Do you really want to delete this genre?</p>

    <form method="POST">
      <div class="form-group">
        <input
          id="genreid"
          class="form-control"
          type="hidden"
          name="genreid"
          value="{{genre._id}}"
        />
      </div>
      <button class="btn btn-primary" type="submit">Delete</button>
    </form>
</div>
  {{/if}}