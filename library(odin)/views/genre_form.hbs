 <h1>{{title}}</h1>

  <form method="POST">
    <div class="form-group">
      <label for="name">Genre:</label>
      <input id="name" class="form-control" type="text" placeholder="Fantasy, Poetry etc." name="name" required value="{{#if genre}}{{genre.name}}{{/if}}">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>

  {{#if errors}}
    <ul style="list-style: none;">
      {{#each errors}}
        <li>{{this.msg}}</li>
      {{/each}}
    </ul>
  {{/if}}